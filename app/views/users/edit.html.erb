<% provide :title, t(".edit_user") %>
<h1><%= t ".update_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user  do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t(".field_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t(".field_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".field_pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".field_confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".save_change"), class: "btn btn-primary" %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".ava_change"), Settings.link.email_ava %>
    </div>
  </div>
</div>
